FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform 0.5;

boundaryField
{
    inlet 
    {
        type            fixedValue;
        value           uniform 1;
    }
    outlet
    {
        type            zeroGradient;
    }
    left
    {
        type            cyclic;
    }
    right 
    {
        type            cyclic;
    }
    empty
    {
        type            empty;
    }
}


